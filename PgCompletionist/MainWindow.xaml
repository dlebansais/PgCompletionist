<Window x:Class="PgCompletionist.MainWindowUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PgCompletionist"
        Title="{Binding TitleText}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="1100"
        Icon="./Resources/search.png"
        Closing="OnMainWindowClosing">
    <Window.Resources>
        <DataTemplate x:Key="CharacterNameTemplate" DataType="{x:Type local:Character}">
            <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
        <DataTemplate x:Key="CharacterTemplate" DataType="{x:Type local:Character}">
            <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="10">
        <ContentControl Content="{Binding ElementName=ctrlCharacterName, Path=SelectedItem}" ContentTemplate="{StaticResource CharacterTemplate}"/>
        <ComboBox x:Name="ctrlCharacterName" ItemsSource="{Binding CharacterList}" SelectedItem="{Binding CurrentCharacter}" ItemTemplate="{StaticResource CharacterNameTemplate}" HorizontalAlignment="Right" VerticalAlignment="Top" Width="150"/>
    </Grid>
</Window>
